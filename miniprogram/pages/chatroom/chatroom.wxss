/* miniprogram/pages/chatroom/chatroom.wxss */
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.chatform{
  flex-direction: row;
  border: 1px solid rgba(0, 0, 0, 0.1);
  height: 100rpx;
  width: 100%;
  background: #f6f6f6;
  position:fixed;
  bottom:0;
}

.content{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background: #f8f8f8;
  height: 1080rpx;
  width: 100%;
}

.iContent{
  height: 80rpx;
  width: 700rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
  background: #ffffff;
  margin-top: 10rpx;
  margin-left: 30rpx;
}

.leftMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #fff;
  margin-left: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}

.rightMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #96EB6A;
  margin-right: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}

.inputRoom {
  width: 100vw;
  height: 16vw;
  border-top: 1px solid #cdcdcd;
  background-color: #f1f1f1;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  z-index: 20;
}

input {
  width: 70vw;
  height: 9.33vw;
  background-color: #fff;
  border-radius: 40rpx;
  margin-left: 2vw;
  padding: 0 3vw;
  font-size: 28rpx;
  color: #444;
}

.pic {
  margin-right: 20rpx;
  margin-left: 20rpx;
}